<h1>Cars</h1>

<% if (user_signed_in?)%>
    <%= link_to "Sign-out", destroy_user_session_path, method: :delete%><br />
    <%= link_to "Edit-account", edit_user_registration_path, method: :get%><br />
    <%= link_to 'New Car', new_car_path %>
<% end %>

<hr>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Model</th>
      <th>Year</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= car.user_id %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
